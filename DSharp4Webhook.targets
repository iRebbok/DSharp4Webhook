<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <RootNamespace>DSharp4Webhook</RootNamespace>
    <TargetFrameworks>net471;netstandard2.0</TargetFrameworks>
  </PropertyGroup>

	<PropertyGroup>
    <LangVersion>8.0</LangVersion>
    <Optimize>True</Optimize>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <DebugType>Portable</DebugType>
    <NoWarn>$(NoWarn);CS1573;CS1591</NoWarn>
    <WarningsAsErrors>true</WarningsAsErrors>
	</PropertyGroup>

	<PropertyGroup>
		<Authors>iRebbok</Authors>
    <RepositoryType>Git</RepositoryType>
    <RepositoryUrl>git://github.com/iRebbok/DSharp4Webhook</RepositoryUrl>
		<PackageProjectUrl>https://github.com/iRebbok/DSharp4Webhook</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright 2020</Copyright>
    <PackageTags>discord;discordapp</PackageTags>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'Debug'">
		<Optimize>False</Optimize>
	</PropertyGroup>

  <PropertyGroup Condition="'$(VersionPrefix)' == ''">
    <VersionPrefix>0.0.0</VersionPrefix>
  </PropertyGroup>
  <PropertyGroup Condition="'$(VersionPrefix)' != ''">
    <Version>$(VersionPrefix)</Version>
  </PropertyGroup>
</Project>
